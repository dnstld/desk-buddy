{
  "compilerOptions": {
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "lib": ["deno.window"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": [],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["**/*.ts"],
    "exclude": [],
    "indentWidth": 2,
    "lineWidth": 100,
    "proseWrap": "preserve",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "imports": {
    "supabase": "https://esm.sh/@supabase/supabase-js@2.39.3"
  }
}
